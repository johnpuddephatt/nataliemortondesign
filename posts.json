---

{% assign pins = site.pins | sort:"position" %}

[
  {% for pin in pins offset: site.pins_per_page %}
    {
      "title": "{{ pin.title }}",
      "image": "{{ pin.image | prepend: site.baseurl }}",
      "url": "{{ pin.url }}"
      {% if pin.is_featured %}
      ,  "is_featured": "{{ pin.is_featured }}"
      {% endif %}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]