---
---

{
    "pins":[
  {% for pin in site.pins offset: site.pins_per_page | sort:"position" %}
    {
      "title": "{{ pin.title }}",
      "leader": "{{ pin.content | markdownify | strip_html }}",
      "image": "{{ pin.image | prepend: site.baseurl }}",
      "url": "{{ pin.url }}"
      {% if pin.is_featured %}
      ,  "is_featured": "{{ pin.is_featured }}"
      {% endif %}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]}