---
---

{
    "pins":[
  {% for post in site.posts offset: site.pins_per_page %}
    {
      "title": "{{ post.title }}",
      "image": "{{ post.image | prepend: site.baseurl }}",
      "url": "{{ post.url }}"
      {% if post.is_featured %}
      ,  "is_featured": "{{ post.is_featured }}"
      {% endif %}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]}